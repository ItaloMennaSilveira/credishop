.contact-fields.mb-3.border.p-3 data-controller="mask"
  = f.hidden_field :id

  .mb-2
    = f.label 'Tipo do contato'
    = f.select :contact_type, Contact.contact_types.keys.map { |k| [k.humanize, k] }, {},
        class: 'form-select', data: { mask_target: "contactType" }

  .mb-2
    = f.label :value
    = f.text_field :value, class: 'form-control',
        data: { mask_target: "contactValue" }

  .mb-2
    .form-check
      = f.check_box :_destroy, class: 'form-check-input'
      = f.label :_destroy, "Remover", class: 'form-check-label'
